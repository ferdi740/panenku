{
  "expo": {
    "name": "PanenKu",
    "slug": "panenku", 
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/app-icon.jpg", 
    "scheme": "panenku",
    "userInterfaceStyle": "light",
    
    
    "splash": {
      "backgroundColor": "#E8F5E9", 
      "resizeMode": "contain"
      
    },
    
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/app-icon.jpg",
        "backgroundColor": "#E8F5E9"
      },
      "permissions": [
        "android.permission.CAMERA", 
        "android.permission.READ_MEDIA_IMAGES"
      ],
      "package": "com.anonymous.panenku"
    },
    
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Akses kamera untuk foto tanaman",
        "NSPhotoLibraryUsageDescription": "Akses galeri untuk foto tanaman"
      }
    },
    
    "web": {
      "favicon": "./assets/images/app-icon.jpg"
    },
    
    "plugins": [
      "expo-router",
      "expo-sqlite", 
      [
        "expo-image-picker",
        {
          "photosPermission": "Akses foto untuk dokumentasi tanaman",
          "cameraPermission": "Akses kamera untuk foto tanaman"
        }
      ]
    ]
  }
}